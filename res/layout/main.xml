<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Spinner android:id="@+id/spinner" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:prompt="@string/project" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/datePrompt" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/datePrompt"
			android:layout_weight="1" />
		<TextView android:id="@+id/dateDisplay" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text=""
			android:textSize="25dip" android:layout_weight="1" />
		<Button android:id="@+id/pickDate" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/dateChange"
			android:layout_weight="1" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/hours"
			android:digits="true" android:layout_weight="1" />
		<EditText android:id="@+id/edittext" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:lines="1"
			android:singleLine="true" android:inputType="numberDecimal"
			android:maxLines="1" android:layout_weight="1" />
	</LinearLayout>
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:text="@string/notes" />
	<EditText android:id="@+id/edittext" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1" />
</LinearLayout>
